<p id="notice"><%= notice %></p>

<h1 class="collection-name">
  <%= @collection.name %>
</h1>
<%= form_for @collection, method: :post, url: collection_templates_path do |f| %>
  <% if f.object.errors.any? %>
    <div class="error_messages">
      <% f.object.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>
  <%= f.hidden_field :collection_id, value: @collection.id %>
  <%= f.submit t('collections.create_template'), class: 'btn btn-primary template-button' %>
<% end %>
<div class="collection-description">
  <%= @collection.description %>
</div>
<hr>
<div class="collection-images">
  <h2><%= t('collections.show.image_title') %></h2>
  <div class="row">
    <% if @collection.images.length == 0 %>
      <div class="col"><%= t('collections.show.no_image_message') %></div>
    <% else %>
      <% @collection.images.each do |image| %>
      <div class="collection-image col">
        <%= image_tag image.thumbnail_image_path %><br />
        <div class="image-name">
            <%= image.file_name_no_extension %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
