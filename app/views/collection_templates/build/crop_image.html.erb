<h1>Crop Area of Interest</h1>
<%= form_for @collection_template, method: :put, url: wizard_path do |f| %>
  <% if f.object.errors.any? %>
    <div class="error_messages">
      <% f.object.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>
  <% # Add in a hidden field just so that the BuildController stays happy %>
  <%= f.hidden_field :id, value: @collection_template.id %>
  <%= react_component('CropImage', {
    region: [0,0,300,300], imagePath: Riiif::Engine.routes.url_helpers.info_path(@collection_template.image.file_name_no_extension)
  }) %>
<% end %>
