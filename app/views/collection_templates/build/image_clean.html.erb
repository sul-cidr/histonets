Clean image

<%= form_for @collection_template, method: :put, url: wizard_path do |f| %>
  <% if f.object.errors.any? %>
    <div class="error_messages">
      <% f.object.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>
  <%= f.fields_for :image_clean do |builder| %>
    <div class="form-group row">
      <%= builder.label :image_clean, 'Denoise', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= builder.range_field :denoise, in: 0..100, value: 0 %>
      </div>
    </div>
    <div class="form-group row">
      <%= builder.label :image_clean, 'Equalize', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= builder.range_field :equalize, in: 0..100, value: 0 %>
      </div>
    </div>
    <div class="form-group row">
      <%= builder.label :image_clean, 'Brightness', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= builder.range_field :brightness, in: 0..200 %>
      </div>
    </div>
    <div class="form-group row">
      <%= builder.label :image_clean, 'Contrast', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= builder.range_field :contrast, in: 0..200 %>
      </div>
    </div>
    <div class="form-group row">
      <%= builder.label :image_clean, 'Smooth', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= builder.range_field :smooth, in: 0..100, value: 0 %>
      </div>
    </div>
    <div class="form-group row">
      <%= builder.label :image_clean, 'Posterize', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= builder.range_field :posterize, in: 0..100, value: 0 %>
      </div>
    </div>
  <% end %>
  <%= f.submit 'Next Step', class: 'btn btn-primary' %>
<% end %>

<%= react_component('LeafletIiif', {
  iiifImage: Riiif::Engine.routes.url_helpers.info_path(@collection_template.image.file_name_no_extension)
}) %>
